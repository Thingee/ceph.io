---
layout: navigation
---

<section class="section">
  <div class="grid lg:grid--cols-auto-72">
    <h1 class="h1">{{ title }}</h1>
  </div>

  <div class="grid lg:grid--cols-auto-72 to-lg:grid--gap-0 lg:grid--gap-16 xl:grid--gap-20">
    <div>
      {% if image %}
        <div class="to-lg:w-full-breakout">
          <div class="aspect-ratio aspect-ratio--16x9 aspect-ratio--contain bg-grey-500 mb-8 lg:mb-10 xl:mb-12">
            <img alt="" class="absolute h-full top-0" loading="lazy" src="{{ image }}" />
          </div>
        </div>
      {% endif %}
      <div class="intro-para richtext">
        {{ content | safe }}
      </div>
    </div>
    <aside>
      <hr class="hr lg:hidden my-16">
      <div class="grid md-to-lg:grid--cols-2 to-md:grid--gap-14 lg:grid--gap-0">
        <div>
          <h2 class="h5">{{ 'about_this_case_study' | i18n }}</h2>
          <a class="inline-block mb-4" href="{{ sponsor.website }}" rel="noreferrer noopener" target="_blank">
            <img src="{{ sponsor.logo }}" alt="{{ sponsor.name }}" style="width: 50px;"/>
          </a>
          <p class="p">{{ 'this_case_study_is_sponsored_by' | i18n }}
            {{ sponsor.name }}.</p>
          <details class="tooltip">
            <summary class="a tooltip__toggle">{{ 'find_out_more' | i18n }}</summary>
            <div class="tooltip__content">
              <p class="mb-0 p">Disclaimer about how sponsored case studies work and who is able to sponsor / publish them. <a class="a" href="/{{ locale }}/foundation/join">Join the Ceph Foundation</a>.</p>
            </div>
          </details>
          <hr class="hidden lg:block hr">
        </div>
        <div>
          <h2 class="h5">{{ 'keep_reading' | i18n }}</h2>
          <p class="p">{{ 'find_out_more_about_this_case_study_at_the' | i18n }}
            {{ sponsor.name }}
            <span class="text-lower">{{ 'website' | i18n }}</span>.</p>
          <a class="button w-full" href="{{ sponsor.website }}">{{ 'go_to' | i18n }}
            {{ sponsor.name }}
            <span class="text-lower">{{ 'website' | i18n }}</span></a>
        </div>
      </div>
    </aside>
  </div>
</section>

